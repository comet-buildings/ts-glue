{
  "name": "ts-glue",
  "version": "1.0.2",
  "description": "TypeScript opinionated dependency injection library. Glue is a tiny lightweight library made for FP codebases making extensive use of partial application for dependency injection.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "type": "module",
  "scripts": {
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "dist": "tsc --project tsconfig.dist.json",
    "format": "biome format --write src",
    "lint": "biome lint --apply src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/comet-buildings/ts-glue.git"
  },
  "author": "",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/comet-buildings/ts-glue/issues"
  },
  "homepage": "https://github.com/comet-buildings/ts-glue#readme",
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
